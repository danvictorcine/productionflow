rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Deny all by default for security
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow profile photo read by anyone, but only the user can write.
    match /users/{userId}/profile.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins to write to the 'content' folder and its subfolders.
    // Allow anyone to read from the 'content' folder.
    match /content/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
