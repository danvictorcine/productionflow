rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Rule for User Profile Photos
    // Allow anyone to read.
    // Allow a user to write/delete only their own profile photo.
    match /users/{userId}/profile.jpg {
      allow read;
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for all Admin-managed content (blog images, team photos, login background, etc.)
    // Allow anyone to read.
    // Allow only authenticated administrators to write/delete.
    match /content/{allPaths=**} {
      allow read;
      allow write, delete: if request.auth != null && request.auth.token.isAdmin == true;
    }
  }
}
