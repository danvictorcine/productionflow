rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Regras de Perfil de Usuário
    match /users/{userId}/profile.jpg {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para conteúdo gerenciado por administradores
    // (Blog, Página "Quem Somos", Página de Login, etc.)
    match /{path=**}/about_team/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    match /posts/images/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }
    
    match /pages/login/background.jpg {
      allow read;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }
    
    // Regras para conteúdo de projetos do usuário
    // (Moodboard)
    match /board_images/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}