rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user profile pictures
    match /users/{userId}/profile.jpg {
      // Allow anyone to read the profile picture
      allow read;
      
      // Allow authenticated users to write only to their own profile picture
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
