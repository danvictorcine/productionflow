rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Rule for user profile pictures
    // Anyone can read, but only the authenticated owner can write.
    match /users/{userId}/profile.jpg {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for general content (blog images, page images, etc.)
    // Anyone can read these public images.
    // Only authenticated users who are administrators can write (upload/delete).
    // The rule now checks the user's profile in Firestore to confirm admin status.
    match /content/{allPaths=**} {
      allow read;
      allow write: if request.auth != null &&
                      get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
