
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // User Profile Photos: Anyone can read, only the user can write
    match /users/{userId}/profile.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Board Images: Only the owner of the project can upload/delete
    match /board_images/{userId}/{fileName} {
      allow read: if true; // Public read for anyone with the link
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Post Images: Public read, only admins can write
    match /posts/images/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Page Images (About Us team photos, Login background): Public read, only admins can write
    match /pages/{path=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
