rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin role from Firestore
    function isAdmin() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  
    // User profile photos: Only the user can upload/update their own photo. Anyone can read.
    match /users/{userId}/profile.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Post images: Only admins can upload. Anyone can read.
    match /posts/images/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Login page background: Only admins can upload. Anyone can read.
    match /pages/login/background.jpg {
        allow read: if true;
        allow write: if isAdmin();
    }

    // "About Us" page team member photos: Only admins can upload. Anyone can read.
    match /pages/about/team/{photoId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Board images for creative projects: Only the project owner can upload. Anyone with link can read.
    match /board_images/{userId}/{imageId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
