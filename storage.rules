
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // By default, deny all reads and writes
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }

    // Allow anyone to read any file. This is necessary for public pages 
    // (storyboards, call sheets, blog posts) to display images to unauthenticated users.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict write access to authenticated users only. This prevents unauthorized uploads.
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
