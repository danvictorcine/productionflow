rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- User Profile Photos ---
    // Anyone can read profile photos.
    // An authenticated user can only write/update/delete their own profile photo.
    match /users/{userId}/profile.jpg {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // --- Content Images (Blog Posts, Pages) ---
    // Anyone can read these images.
    // Only authenticated users who are admins can write/delete these images.
    // This allows an admin to manage all site content.
    match /{folder}/{allPaths=**}
      where folder in ['posts', 'pages', 'users'] {
      allow read;
      allow write: if request.auth != null &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
