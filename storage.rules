rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Nega tudo por padrão.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Permite que todos leiam fotos de perfil, mas apenas o dono pode atualizar.
    match /users/{userId}/profile.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite que todos leiam o conteúdo (imagens de páginas, etc.).
    // Apenas administradores podem escrever na pasta 'content'.
    function isAdmin() {
      return request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    match /content/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
    