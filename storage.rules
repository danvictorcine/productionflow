
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // User profile photos: allow users to read anyone's photo, but only write to their own.
    match /users/{userId}/profile.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Public content (post images, team photos, background images, etc.)
    // Anyone can read. Only authenticated admins can write/delete.
    // The exists() check is crucial to prevent the get() call from failing on a non-existent document, which would deny permission.
    match /content/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                     exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
                     get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
