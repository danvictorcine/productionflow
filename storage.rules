rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User profile photos: anyone can read, only the user can write.
    match /users/{userId}/profile.jpg {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Blog post images: anyone can read, only admins can write.
    match /posts/images/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Moodboard images: only the owner can read/write their own images.
    match /board_images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
