
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: can only read/write their own profile. Admins can read any profile.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Posts: anyone can read, but only admins can write/delete.
    match /posts/{postId} {
      allow read;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Pages (About, Contact): anyone can read, but only admins can write.
    match /pages/{pageId} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Login Features: anyone can read, but only admins can write.
    match /login_features/{featureId} {
      allow read;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Projects: only the owner can access their own projects.
    match /projects/{projectId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Transactions: only the owner can access their own transactions.
    match /transactions/{transactionId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Productions: only the owner can access their own productions.
    match /productions/{productionId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Shooting Days: only the owner can access their own shooting days.
     match /shooting_days/{dayId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Creative Projects: only the owner can access their own creative projects.
    match /creative_projects/{projectId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Board Items: only the owner can access items in their own projects.
    match /board_items/{itemId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
