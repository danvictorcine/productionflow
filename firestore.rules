rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- User Profiles ---
    // Users can read/update their own profile. Admins can read any profile.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow read: if isAdmin();
    }

    // --- Core Project Data ---
    // All project types and their sub-collections are only accessible by their owner.
    match /projects/{projectId} {
      allow read, write, delete: if request.auth.uid == resource.data.userId;
    }
    match /transactions/{transactionId} {
      allow read, write, delete: if request.auth.uid == resource.data.userId;
    }
    match /productions/{productionId} {
      allow read, write, delete: if request.auth.uid == resource.data.userId;
    }
    match /shooting_days/{dayId} {
      allow read, write, delete: if request.auth.uid == resource.data.userId;
    }
    match /creative_projects/{creativeProjectId} {
       allow read, write, delete: if request.auth.uid == resource.data.userId;
    }
    match /board_items/{itemId} {
       allow read, write, delete: if request.auth.uid == resource.data.userId;
    }

    // --- Public Content (Blog & Pages) ---
    // Anyone can read posts and public-facing pages.
    // Only admins can create, update, or delete them.
    match /posts/{postId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }
    match /pages/{pageId} {
       allow read: if true;
       allow write, delete: if isAdmin();
    }
  }
}
