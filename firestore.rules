rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Pages (about, contact, terms) and Posts: Anyone can read, only admins can write.
    match /(pages|posts)/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // User Profiles: Users can manage their own profile. Admins can manage any.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Projects, Transactions, Productions, Shooting Days, Creative Projects, Board Items:
    // Users can only access documents they own.
    match /(projects|transactions|productions|shooting_days|creative_projects|board_items)/{documentId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
