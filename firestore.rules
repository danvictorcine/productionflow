rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- User-specific, private collections ---
    
    match /users/{userId} {
      allow read, update: if isOwner(userId);
    }
    
    // Rule for collections that are private to the user
    match /{collection}/{docId} 
      where collection in ['projects', 'transactions', 'productions', 'creative_projects', 'board_items'] {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Rule for storyboards (can be public)
    match /storyboards/{storyboardId} {
        allow get: if isOwner(resource.data.userId) || resource.data.isPublic == true;
        allow list: if request.auth.uid == request.query.filters.userId[0][2];
        allow create: if isOwner(request.resource.data.userId);
        allow update, delete: if isOwner(resource.data.userId);
    }

    match /storyboard_panels/{panelId} {
        allow get: if isOwner(resource.data.userId) || get(/databases/$(database)/documents/storyboards/$(resource.data.storyboardId)).data.isPublic == true;
        allow list: if get(/databases/$(database)/documents/storyboards/$(request.query.filters.storyboardId[0][2])).data.userId == request.auth.uid;
        allow create: if isOwner(request.resource.data.userId);
        allow update, delete: if isOwner(resource.data.userId);
    }

    // Rule for shooting_days (can be public)
    match /shooting_days/{dayId} {
       allow get: if isOwner(resource.data.userId) || resource.data.isPublic == true;
       allow list: if get(/databases/$(database)/documents/productions/$(request.query.filters.productionId[0][2])).data.userId == request.auth.uid;
       allow create: if isOwner(request.resource.data.userId);
       allow update, delete: if isOwner(resource.data.userId);
    }
    
    // --- Public Shares Collection ---
    match /public_shares/{shareId} {
        allow get: if true;
        allow create: if isOwner(request.resource.data.userId);
        allow delete: if isOwner(resource.data.userId);
    }

    // --- Other Collections (Team, Content, etc.) ---
    
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    match /pages/{pageId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    match /teamMembers/{memberId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    match /settings/theme {
      allow get: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
