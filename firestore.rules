
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Nega tudo por padrão para garantir segurança.
    match /{document=**} {
      allow read, write: if false;
    }

    // Perfis de usuário: Qualquer usuário autenticado pode ler. Apenas o dono pode atualizar. Admin pode atualizar qualquer um.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Projetos Financeiros:
    // list: Permite que a query da página inicial (getProjects) funcione, verificando se a consulta filtra pelo userId do usuário logado.
    // get: Permite que um usuário leia um documento de projeto específico se ele for o dono.
    // create, update, delete: Permissões de escrita que verificam a posse.
    match /projects/{projectId} {
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
      allow get: if request.auth.uid == resource.data.userId;
      allow create: if request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // As transações são validadas através de seu projeto pai.
    match /transactions/{transactionId} {
      allow read, write: if get(/databases/$(database)/documents/projects/$(request.resource.data.projectId)).data.userId == request.auth.uid;
    }

    // Produções (Ordens do Dia):
    // Mesma lógica dos projetos financeiros.
    match /productions/{productionId} {
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
      allow get: if request.auth.uid == resource.data.userId;
      allow create: if request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // Os dias de filmagem são validados através de sua produção pai.
    match /shooting_days/{dayId} {
      allow read, write: if get(/databases/$(database)/documents/productions/$(request.resource.data.productionId)).data.userId == request.auth.uid;
    }
    
    // Projetos Criativos (Admin), Posts (Blog) e Páginas de Conteúdo
    match /creative_projects/{projectId} {
      allow list, get, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /board_items/{itemId} {
       allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
