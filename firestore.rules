rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      allow create: if request.auth.uid == userId;
    }

    match /projects/{projectId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /transactions/{transactionId} {
      allow read, write: if isOwner(get(/databases/$(database)/documents/projects/$(resource.data.projectId)).data.userId);
    }

    match /productions/{productionId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /shooting_days/{dayId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    match /creative_projects/{projectId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    match /board_items/{itemId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    match /storyboards/{storyboardId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    match /storyboard_scenes/{sceneId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    match /storyboard_panels/{panelId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /public_productions/{productionId} {
      allow get;
      allow list: if false; // List access is disabled for public collections
    }

    match /public_shooting_days/{dayId} {
        allow get;
        allow list: if false;
    }

    match /posts/{postId} {
      allow read;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /pages/{pageId} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /teamMembers/{memberId} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /settings/{settingId} {
        allow read;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /talents/{talentId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /unified_projects/{projectId} {
        allow read, write: if isOwner(resource.data.userId);
    }

  }
}
