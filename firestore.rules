rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can read their own profile and admins can read any profile
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if request.auth != null;
      allow update: if isOwner(userId);
    }
    
    // Generic rules for collections owned by a user
    // This now allows querying on 'groupId'
    rules projectReadRules {
       allow list: if request.auth != null && request.auth.uid == request.query.resource.data.userId;
       allow get: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    rules projectWriteRules {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Apply rules to all project-related collections
    match /projects/{docId} {
      allow read: if projectReadRules();
      allow write: if projectWriteRules();
    }
    match /transactions/{docId} {
       allow read: if projectReadRules();
       allow write: if projectWriteRules();
    }
    match /productions/{docId} {
       allow read: if projectReadRules();
       allow write: if projectWriteRules();
    }
     match /shooting_days/{docId} {
       allow read: if projectReadRules();
       allow write: if projectWriteRules();
    }
    match /creative_projects/{docId} {
       allow read: if projectReadRules();
       allow write: if projectWriteRules();
    }
    match /board_items/{docId} {
       allow read: if projectReadRules();
       allow write: if projectWriteRules();
    }
    match /storyboards/{docId} {
       allow read: if projectReadRules();
       allow write: if projectWriteRules();
    }
    match /storyboard_scenes/{docId} {
       allow read: if projectReadRules();
       allow write: if projectWriteRules();
    }
    match /storyboard_panels/{docId} {
       allow read: if projectReadRules();
       allow write: if projectWriteRules();
    }
    match /projectGroups/{docId} {
       allow read: if projectReadRules();
       allow write: if projectWriteRules();
    }

    // Public read for specific collections
    match /public_productions/{productionId} {
        allow get: if true;
    }
    match /public_shooting_days/{dayId} {
        allow get: if true;
    }

    // Rules for pages, posts, team members, etc.
    // Public read access, write access only for admins
    function publicReadAdminWrite() {
      return {
        allow read: if true,
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
      };
    }
    
    match /posts/{postId} {
        include publicReadAdminWrite();
    }
     match /pages/{pageId} {
        include publicReadAdminWrite();
    }
     match /teamMembers/{memberId} {
        include publicReadAdminWrite();
    }
     match /settings/{settingId} {
        include publicReadAdminWrite();
    }
  }
}
