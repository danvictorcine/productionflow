rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Nega tudo por padrão para garantir segurança.
    match /{document=**} {
      allow read, write: if false;
    }

    // Perfis de usuário: Qualquer usuário autenticado pode ler. Apenas o dono pode criar/atualizar seu próprio perfil.
    // Admins podem atualizar qualquer perfil.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Acesso a coleções principais (projects, productions)
    // Permite que um usuário acesse (leia, escreva, atualize, delete) um documento se o userId no documento corresponder ao uid do usuário autenticado.
    // Isso funciona para get, create, update, delete.
    // A regra de 'list' permite a consulta da página inicial, desde que ela filtre por 'userId'.
    match /projects/{projectId} {
      allow list: if request.auth.uid != null && request.query.where[0][2] == request.auth.uid;
      allow get, create, update, delete: if request.auth.uid == request.resource.data.userId || request.auth.uid == resource.data.userId;
    }

    match /productions/{productionId} {
      allow list: if request.auth.uid != null && request.query.where[0][2] == request.auth.uid;
      allow get, create, update, delete: if request.auth.uid == request.resource.data.userId || request.auth.uid == resource.data.userId;
    }
    
    // Subcoleções (transactions, shooting_days)
    // O acesso é permitido se o usuário for o dono do documento pai (projeto ou produção).
    match /projects/{projectId}/transactions/{transactionId} {
      allow read, write: if get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
    }

    match /productions/{productionId}/shooting_days/{dayId} {
      allow read, write: if get(/databases/$(database)/documents/productions/$(productionId)).data.userId == request.auth.uid;
    }
    
    // Conteúdo de Admin e Público
    // Apenas administradores podem acessar projetos criativos e seus itens.
    match /creative_projects/{projectId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    match /board_items/{itemId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Posts de blog e páginas são públicos para leitura, mas apenas admins podem escrever.
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}

    