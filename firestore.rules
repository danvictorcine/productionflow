rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Nega tudo por padrão para garantir segurança.
    match /{document=**} {
      allow read, write: if false;
    }

    // Perfis de usuário: Qualquer usuário autenticado pode ler. Apenas o dono pode criar/atualizar. Admin pode atualizar qualquer um.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Coleções do Usuário: Um usuário pode ler e escrever documentos (como projetos e produções)
    // se o 'userId' no documento for o seu. Esta regra simples e robusta funciona para get, list, create, update e delete,
    // desde que as queries no app incluam where('userId', '==', auth.uid).
    match /projects/{projectId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    match /productions/{productionId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    match /transactions/{transactionId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }
    match /shooting_days/{dayId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    // Função helper para verificar se o usuário é administrador.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Conteúdo de Admin: Apenas administradores podem acessar.
    match /creative_projects/{projectId} {
      allow read, write: if isAdmin();
    }
    match /board_items/{itemId} {
       allow read, write: if isAdmin();
    }
    
    // Conteúdo Público: Todos podem ler, apenas admins podem escrever.
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
