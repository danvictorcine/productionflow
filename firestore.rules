rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // A user is the owner of a document if their UID matches the document's userId field
    // or if their UID matches the document's ID in the users collection.
    function isOwner(docUserId) {
      return request.auth != null && request.auth.uid == docUserId;
    }

    // Projects: Only the owner can manage their projects.
    match /projects/{projectId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Transactions: Only the owner can manage their transactions.
    match /transactions/{transactionId} {
      allow read, write, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // User profiles: Users can create their own profile,
    // and can only read or update their own.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth != null;
    }
  }
}
