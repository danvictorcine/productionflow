
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Users can only read/write their own profile.
      allow read, write: if isOwner(userId);
    }
    
    match /projects/{projectId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /projectGroups/{groupId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /transactions/{transactionId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /productions/{productionId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /shooting_days/{dayId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /creative_projects/{projectId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /board_items/{itemId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /storyboards/{storyboardId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /storyboard_scenes/{sceneId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    match /storyboard_panels/{panelId} {
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }

    match /posts/{postId} {
      allow read: if true; // Publicly readable
      allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /pages/{pageId} {
      allow read: if true; // Publicly readable
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /teamMembers/{memberId} {
      allow read: if true; // Publicly readable
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /settings/{settingId} {
        // Theme settings can be read by anyone to apply theme. Can only be written by admin.
        allow read: if true;
        allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /public_productions/{productionId} {
        allow read: if true;
        allow write: if isSignedIn(); // Allow writes for logged-in users to share
    }

    match /public_shooting_days/{dayId} {
        allow read: if true;
        allow write: if isSignedIn(); // Allow writes for logged-in users to share
    }

  }
}
