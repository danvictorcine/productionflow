rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check ownership based on a userId field
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Allow users to manage their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Generic rule for all user-owned collections
    // A user can create/read/update/delete their own documents.
    // They can list documents as long as they filter by their own userId in the query.
    match /projects/{docId} { allow read, write: if isOwner(resource.data.userId); }
    match /transactions/{docId} { allow read, write: if isOwner(resource.data.userId); }
    match /productions/{docId} { allow read, write: if isOwner(resource.data.userId); }
    match /shooting_days/{docId} { allow read, write: if isOwner(resource.data.userId); }
    match /creative_projects/{docId} { allow read, write: if isOwner(resource.data.userId); }
    match /board_items/{docId} { allow read, write: if isOwner(resource.data.userId); }
    match /storyboards/{docId} { allow read, write: if isOwner(resource.data.userId); }
    match /storyboard_scenes/{docId} { allow read, write: if isOwner(resource.data.userId); }
    match /storyboard_panels/{docId} { allow read, write: if isOwner(resource.data.userId); }
    match /projectGroups/{docId} { allow read, write: if isOwner(resource.data.userId); }

    // Public collections (anyone can read, only admins can write)
    function isAdmin() {
      // Ensure user is authenticated before checking admin status
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /posts/{postId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    match /pages/{pageId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    match /teamMembers/{memberId} {
      allow get: if true;
      allow list, write: if isAdmin();
    }
    match /settings/{settingId} {
      allow get: if true; // Allow anyone to read settings like theme
      allow list, write: if isAdmin();
    }
    
    // Publicly readable documents for sharing
    match /public_productions/{productionId} { allow get: if true; }
    match /public_shooting_days/{dayId} { allow get: if true; }
  }
}
