
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    match /users/{userId} {
      // Authenticated users can read any profile, needed for security rule checks
      allow read: if request.auth != null;
      // Users can only update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
      // Admins can write to any profile
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Site pages (About, Contact, etc.)
    match /pages/{pageId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Blog posts
    match /posts/{postId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Projects (financial)
    match /projects/{projectId} {
      // User can only access their own projects
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Transactions, a sub-collection of projects
    match /transactions/{transactionId} {
      // User can only access transactions if the new/updated transaction belongs to them
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Production (Call Sheet) data
    match /productions/{productionId} {
       allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /shooting_days/{dayId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/productions/$(resource.data.productionId)).data.userId == request.auth.uid;
    }
    
    // Creative Projects (Moodboard) data
    match /creative_projects/{creativeProjectId} {
        allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /board_items/{itemId} {
       allow read, write: if request.auth != null && get(/databases/$(database)/documents/creative_projects/$(resource.data.projectId)).data.userId == request.auth.uid;
    }
  }
}
