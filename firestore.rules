rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Projects can only be read, created, updated, or deleted by the owner.
    match /projects/{projectId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Transactions can only be managed by the owner.
    match /transactions/{transactionId} {
      // Allow read, update, delete if the user owns the transaction.
      allow read, update, delete: if isOwner(resource.data.userId);
      
      // Allow create if the user owns the transaction being created
      // AND they also own the project it's being linked to.
      allow create: if isOwner(request.resource.data.userId) &&
                       isOwner(get(/databases/$(database)/documents/projects/$(request.resource.data.projectId)).data.userId);
    }

    // User profiles can be read by anyone (for display names, etc.)
    // but only created or updated by the owner.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if isOwner(userId);
    }
  }
}
