rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the requesting user is the owner of a document
    function isOwner(docData) {
      return request.auth.uid == docData.userId;
    }

    // Projects: Users can only manage their own projects.
    match /projects/{projectId} {
      // Allow reading, updating, and deleting if the user is the owner of the existing document.
      allow read, update, delete: if isOwner(resource.data);
      // Allow creating if the user is the owner of the new document being created.
      allow create: if isOwner(request.resource.data);
    }

    // Transactions: Users can only manage their own transactions.
    match /transactions/{transactionId} {
      // Allow reading, updating, and deleting if the user is the owner of the existing document.
      allow read, update, delete: if isOwner(resource.data);
      // Allow creating if the user is the owner of the new document being created.
      allow create: if isOwner(request.resource.data);
    }
    
    // User Profiles: Users can only create/update their own profile.
    // Any authenticated user can read profile information (name/email).
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }
  }
}
