rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // User profiles can be created by the user, and only read/updated by the owner.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if isOwner(userId);
      allow delete: if false; // Deleting profiles is not allowed
    }

    // Projects can be read, updated, or deleted only by the user who created them.
    // New projects can be created by any authenticated user for themselves.
    match /projects/{projectId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Transactions can be managed only by the user who created them.
    match /transactions/{transactionId} {
      // allow read, write, delete: if isOwner(resource.data.userId); <-- 'write' is too broad
      allow read, delete, update: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
  }
}
