rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user owns the resource
    function isOwner(resource) {
      return request.auth.uid == resource.data.userId;
    }

    // Users can read and update their own profile
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if isAuthenticated();
    }

    // Users can manage their own projects
    match /projects/{projectId} {
      allow read, update, delete: if isAuthenticated() && isOwner(resource);
      allow create: if isAuthenticated();
    }
    
    // Users can manage transactions for projects they own
    match /transactions/{transactionId} {
      // For create, we can't check resource.data.userId, so we check the incoming data
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // For read, update, delete, we check the existing data in the document
      allow read, update, delete: if isAuthenticated() && isOwner(resource);
    }
  }
}
