rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Nega tudo por padrão para garantir segurança.
    match /{document=**} {
      allow read, write: if false;
    }

    // Perfis de usuário: Qualquer usuário autenticado pode ler. Apenas o dono pode atualizar. Admin pode atualizar qualquer um.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Projetos e Produções:
    // Permite que um usuário liste (list) apenas seus próprios projetos (se a query for correta).
    // Permite que um usuário leia (get) um projeto específico se for o dono.
    // Permite criar, atualizar e deletar apenas se for o dono.
    match /projects/{projectId} {
      allow list: if request.auth != null && request.query.limit <= 100 && request.query.filters[0][2] == request.auth.uid;
      allow get: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;

      // Transações seguem a permissão do projeto pai.
      match /transactions/{transactionId} {
        allow read, write: if get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
      }
    }

    match /productions/{productionId} {
      allow list: if request.auth != null && request.query.limit <= 100 && request.query.filters[0][2] == request.auth.uid;
      allow get: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;

      // Dias de filmagem seguem a permissão da produção pai.
      match /shooting_days/{dayId} {
        allow read, write: if get(/databases/$(database)/documents/productions/$(productionId)).data.userId == request.auth.uid;
      }
    }
    
    // Conteúdo de Admin (Projetos Criativos, Blog, Páginas)
    match /creative_projects/{projectId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    match /board_items/{itemId} {
       allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
