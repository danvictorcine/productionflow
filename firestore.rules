rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only read and update their own profile
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth != null;
    }

    // Projects can be created by any authenticated user.
    // They can only be read, updated, or deleted by the owner.
    match /projects/{projectId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Transactions can be created by any authenticated user.
    // They can only be read, updated, or deleted by the owner.
    match /transactions/{transactionId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      // Ensure transaction is linked to a project the user owns
      allow create: if isOwner(request.resource.data.userId) &&
                       get(/databases/$(database)/documents/projects/$(request.resource.data.projectId)).data.userId == request.auth.uid;
    }
  }
}