rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles:
    // - Anyone can read user profiles (for names, photos, etc.)
    // - A user can update their own profile.
    // - An admin can write to any user profile.
    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Pages (about, contact, etc.): Read by anyone, written by admins.
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Posts: Read by anyone, written by admins.
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Financial Projects and their transactions: Only accessible by the owner.
    match /projects/{projectId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      
      match /transactions/{transactionId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
      }
    }
    
    // Production (Call Sheet) data: Only accessible by the owner.
    match /productions/{productionId} {
       allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /shooting_days/{dayId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/productions/$(resource.data.productionId)).data.userId == request.auth.uid;
    }
    
    // Creative Projects (Moodboard) data: Only accessible by the owner.
    match /creative_projects/{creativeProjectId} {
        allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /board_items/{itemId} {
       allow read, write: if request.auth != null && get(/databases/$(database)/documents/creative_projects/$(resource.data.projectId)).data.userId == request.auth.uid;
    }
  }
}
