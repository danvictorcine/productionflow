rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }

    // User profiles
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }

    // Projects and subcollections
    match /projects/{projectId} {
      // Users can only access their own projects.
      allow read, write: if isOwner(resource.data.userId);

      match /transactions/{transactionId} {
        // Transactions inherit the parent project's permissions.
        allow read, write: if get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
      }
    }
    
    // Productions and subcollections
    match /productions/{productionId} {
      allow read, write: if isOwner(resource.data.userId);

      match /shooting_days/{dayId} {
        allow read, write: if get(/databases/$(database)/documents/productions/$(productionId)).data.userId == request.auth.uid;
      }
    }

    // Creative projects (Admin only)
    match /creative_projects/{projectId} {
      allow read, write: if isAdmin();
    }
    match /board_items/{itemId} {
       allow read, write: if isAdmin();
    }

    // Public content (readable by anyone, writable by admin)
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
