
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles
    match /users/{userId} {
      // Allow any authenticated user to read user profiles.
      // This is necessary for Storage rules to check for admin status.
      allow read: if request.auth != null;
      // Admins can list all users.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      // Allow users to update their own profile.
      allow update: if request.auth != null && request.auth.uid == userId;
      // Admins can manage (create/delete) users.
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Site pages (About, Contact, etc.)
    match /pages/{pageId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Blog posts
    match /posts/{postId} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Projects and their sub-collections
    match /projects/{projectId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /transactions/{transactionId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/projects/$(resource.data.projectId)).data.userId == request.auth.uid;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Production (Call Sheet) data
    match /productions/{productionId} {
       allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /shooting_days/{dayId} {
        allow read: if request.auth != null && get(/databases/$(database)/documents/productions/$(resource.data.productionId)).data.userId == request.auth.uid;
        allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Creative Projects (Moodboard) data
    match /creative_projects/{creativeProjectId} {
        allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /board_items/{itemId} {
       allow read: if request.auth != null && get(/databases/$(database)/documents/creative_projects/$(resource.data.projectId)).data.userId == request.auth.uid;
       allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
