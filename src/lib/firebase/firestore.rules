
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for clarity and reuse
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }

    // User profiles can be read by any authenticated user.
    // Users can only create/update their own profile. Admins can update any.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }

    // Projects and Productions: A user can read/write their own documents.
    // This simple rule works for get, list, create, update, and delete,
    // because the app's queries are secured with a `where('userId', '==', auth.uid)` clause.
    match /projects/{projectId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /productions/{productionId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    // Sub-collections: Permissions are derived from the parent document.
    match /projects/{projectId}/transactions/{transactionId} {
      allow read, write: if get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid;
    }
    match /productions/{productionId}/shooting_days/{dayId} {
      allow read, write: if get(/databases/$(database)/documents/productions/$(productionId)).data.userId == request.auth.uid;
    }

    // Admin-only content
    match /creative_projects/{path=**} {
      allow read, write: if isAdmin();
    }
    match /board_items/{path=**} {
      allow read, write: if isAdmin();
    }

    // Public content, admin-only writes
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
